valores = []
while True:
    valores.append(int(input('Digite um valor: ')))
    resp = str(input('Quer continuar? [S/N] ')).strip().upper()
    if resp in 'N':
        break
print('=-=' * 20)
print(f'VocÃª digitou os valores em ordem crescente: {len(valores)} elementos.')
valores.sort(reverse=True)
print(f'VocÃª digitou os valores em ordem decrescente: {valores}')
if 5 in valores:
    print(f'O valor 5 faz parte da lista e estÃ¡ na posiÃ§Ã£o {valores.index(5)}')
else:
    print('O valor 5 nÃ£o foi encontrado na lista.')




