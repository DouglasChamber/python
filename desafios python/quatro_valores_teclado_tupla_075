num = ( int(input('Digite o 1Âº valor: ')),
        int(input('Digite o 2Âº valor: ')),
        int(input('Digite o 3Âº valor: ')),
        int(input('Digite o 4Âº valor: ')) )

print(f'VocÃª digitou os valores: {num}')
print(f'O valor 9 apareceu {num.count(9)} vezes')

if 3 in num:
    print(f'O valor 3 apareceu na {num.index(3)+1}Âª posiÃ§Ã£o')

print('Os valores pares digitados foram: ', end='')
